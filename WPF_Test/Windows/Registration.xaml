<Window x:Class="WPF_Test.Windows.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Test.Windows"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None">
        <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <!--Левая часть окна-->
        <Grid Background="#3C3C3C">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TextBlock Foreground="White" FontSize="36"
             Grid.Column="1" Grid.Row="1"   Text="Есть аккаунт?"/>
            <TextBlock Foreground="White" TextWrapping="Wrap" FontSize="14"
             Grid.Column="1" Grid.Row="3" Text="Авторизуйся, чтобы продолжить работу платфо рмой После входа ты сможешь управлять своими данными, отслеживать прогресс и пользоваться всеми возможностями сервиса без ограничений." />
            <Button Foreground="White" 
                 Background="Transparent" 
                 BorderBrush="White" 
             Grid.Column="1" Grid.Row="5" Content="Войти" Click="Button_Click"/>

        </Grid>

        <!--Правая часть окна-->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TextBlock FontSize="36"
             Text="Регистрация" Grid.Column="1" Grid.Row="1"/>

            <TextBlock FontSize="24"
             Text="Логин" Grid.Column="1" Grid.Row="2"/>

            <TextBox Grid.Column="1" Grid.Row="3"/>

            <TextBlock FontSize="24"
             Text="Пароль" Grid.Column="1" Grid.Row="4"/>

            <PasswordBox Grid.Column="1" Grid.Row="5"/>

            <Button Background="#3c3c3c" Content="Зарегистрироваться" Foreground="White"
             Grid.Column="1" Grid.Row="7"/>

        </Grid>
    </Grid>
</Window>
